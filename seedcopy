local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local Spawner = loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/Spawner.lua"))()

-- Usunięcie starego UI jeśli istnieje
local oldUI = playerGui:FindFirstChild("SeedCopyUI")
if oldUI then
    oldUI:Destroy()
end

-- Utworzenie ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SeedCopyUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Główny przycisk (TextButton)
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 160, 0, 60)
button.Position = UDim2.new(0.5, -80, 0.7, 0)
button.AnchorPoint = Vector2.new(0.5, 0.5)
button.BackgroundColor3 = Color3.fromRGB(255, 100, 180)
button.AutoButtonColor = false -- wyłącz domyślny efekt, bo mamy własny
button.Text = ""
button.Parent = screenGui
button.BorderSizePixel = 0

-- Zaokrąglenie boków
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 15)
corner.Parent = button

-- Mały napis u góry
local topLabel = Instance.new("TextLabel")
topLabel.Size = UDim2.new(1, 0, 0, 15)
topLabel.Position = UDim2.new(0, 0, 0, 5)
topLabel.BackgroundTransparency = 1
topLabel.Text = "SeedCopys script - 1.0.0"
topLabel.TextColor3 = Color3.new(1, 1, 1)
topLabel.Font = Enum.Font.GothamSemibold
topLabel.TextSize = 14
topLabel.Parent = button
topLabel.ZIndex = 2

-- Napis Copy na środku
local mainLabel = Instance.new("TextLabel")
mainLabel.Size = UDim2.new(1, 0, 0, 30)
mainLabel.Position = UDim2.new(0, 0, 0, 15)
mainLabel.BackgroundTransparency = 1
mainLabel.Text = "Copy"
mainLabel.TextColor3 = Color3.new(1, 1, 1)
mainLabel.Font = Enum.Font.GothamBold
mainLabel.TextSize = 24
mainLabel.Parent = button
mainLabel.ZIndex = 2

-- Napis na dole
local bottomLabel = Instance.new("TextLabel")
bottomLabel.Size = UDim2.new(1, 0, 0, 15)
bottomLabel.Position = UDim2.new(0, 0, 1, -20)
bottomLabel.BackgroundTransparency = 1
bottomLabel.Text = "Made by KingGaG"
bottomLabel.TextColor3 = Color3.new(1, 1, 1)
bottomLabel.Font = Enum.Font.Gotham
bottomLabel.TextSize = 12
bottomLabel.Parent = button
bottomLabel.ZIndex = 2

-- Animacja pulsowania
local tweenInfo = TweenInfo.new(1.2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true)
local tween1 = TweenService:Create(button, tweenInfo, {BackgroundColor3 = Color3.fromRGB(255, 70, 150)})
tween1:Play()

-- Drag variables
local dragging = false
local dragInput
local dragStart
local startPos
local moved = false

button.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = button.Position
        moved = false

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
                -- Jeśli przesunięto więcej niż 5px to traktuj jako drag a nie kliknięcie
                if not moved then
                    -- Kliknięcie (spawn seed)
                    local clickTween = TweenService:Create(button, TweenInfo.new(0.15), {Size = UDim2.new(0, 140, 0, 55)})
                    local releaseTween = TweenService:Create(button, TweenInfo.new(0.15), {Size = UDim2.new(0, 160, 0, 60)})

                    clickTween:Play()
                    clickTween.Completed:Wait()
                    releaseTween:Play()

                    pcall(function()
                        Spawner.SpawnSeed("Candy Blossom")
                    end)
                end
            end
        end)
    end
end)

button.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if dragging and input == dragInput then
        local delta = input.Position - dragStart
        if delta.Magnitude > 5 then
            moved = true
        end
        button.Position = UDim2.new(
            startPos.X.Scale,
            startPos.X.Offset + delta.X,
            startPos.Y.Scale,
            startPos.Y.Offset + delta.Y
        )
    end
end)
