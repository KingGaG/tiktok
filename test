-- Load Spawner
local Spawner = loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/Spawner.lua"))()
Spawner.Load()

-- Utwórz ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "DragonflyCopyGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")

-- Utwórz przycisk
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 150, 0, 50)
button.Position = UDim2.new(0.5, -75, 0.4, 0) -- lekko powyżej środka ekranu
button.BackgroundColor3 = Color3.fromRGB(35, 150, 200) -- ładny niebieski
button.BorderSizePixel = 0
button.Text = "Copy!"
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.GothamBold
button.TextScaled = true
button.Parent = screenGui

-- Efekt hover
button.MouseEnter:Connect(function()
    button.BackgroundColor3 = Color3.fromRGB(50, 180, 230)
end)
button.MouseLeave:Connect(function()
    button.BackgroundColor3 = Color3.fromRGB(35, 150, 200)
end)

-- Akcja po kliknięciu
button.MouseButton1Click:Connect(function()
    Spawner.SpawnPet("Dragonfly", 10, 15)
    -- Można dodać feedback, np. zmiana tekstu chwilowo
    button.Text = "Copied!"
    wait(1.5)
    button.Text = "Copy!"
end)
