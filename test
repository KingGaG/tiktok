local Spawner = loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/Spawner.lua"))()

local TweenService = game:GetService("TweenService")
local player = game:GetService("Players").LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local existingGui = playerGui:FindFirstChild("DragonflyCopyGUI")
if existingGui then
    existingGui:Destroy()
end

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "DragonflyCopyGUI"
screenGui.Parent = playerGui

local container = Instance.new("Frame")
container.Name = "Container"
container.Size = UDim2.new(0, 180, 0, 60)
container.Position = UDim2.new(0.15, 0, 0.65, 0)
container.BackgroundTransparency = 1
container.Parent = screenGui

local button = Instance.new("TextButton")
button.Name = "CopyButton"
button.Size = UDim2.new(1, 0, 1, 0)
button.Position = UDim2.new(0, 0, 0, 0)
button.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
button.BackgroundTransparency = 0.3
button.BorderSizePixel = 0
button.Text = "Cop!"
button.TextColor3 = Color3.fromRGB(240, 240, 240)
button.Font = Enum.Font.GothamBold
button.TextScaled = true
button.AutoButtonColor = false
button.Parent = container

local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(0, 14)
uicorner.Parent = button

-- Dodaj UIStroke jako obwódkę
local uiStroke = Instance.new("UIStroke")
uiStroke.Parent = button
uiStroke.Color = Color3.fromRGB(180, 180, 180)
uiStroke.Thickness = 3
uiStroke.Transparency = 0
uiStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

-- Animacja pulsowania koloru obwódki
local tweenInfo = TweenInfo.new(1.5, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true)

local tweenUp = TweenService:Create(uiStroke, tweenInfo, {Color = Color3.fromRGB(230, 230, 230)})
local tweenDown = TweenService:Create(uiStroke, tweenInfo, {Color = Color3.fromRGB(180, 180, 180)})

-- Uruchom animację w pętli
spawn(function()
    while true do
        tweenUp:Play()
        tweenUp.Completed:Wait()
        tweenDown:Play()
        tweenDown.Completed:Wait()
    end
end)

-- Hover effect
button.MouseEnter:Connect(function()
    button.BackgroundTransparency = 0.1
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
end)
button.MouseLeave:Connect(function()
    button.BackgroundTransparency = 0.3
    button.TextColor3 = Color3.fromRGB(240, 240, 240)
end)

-- Kliknięcie - spawn pet
button.MouseButton1Click:Connect(function()
    Spawner.SpawnPet("Dragonfly", 10, 15)
end)
