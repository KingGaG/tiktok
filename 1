-- Usuniƒôcie starego GUI
pcall(function()
	if game.CoreGui:FindFirstChild("DeltaLoadingUI") then
		game.CoreGui.DeltaLoadingUI:Destroy()
	end
end)

local coreGui = game:GetService("CoreGui")
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Usuwanie potencjalnie innych loading screen√≥w
local toRemove = {"DeltaLoadingUI", "RestartGUI", "OtherLoadingUI"}

for _, guiName in pairs(toRemove) do
    if coreGui:FindFirstChild(guiName) then
        coreGui[guiName]:Destroy()
    end
    if playerGui:FindFirstChild(guiName) then
        playerGui[guiName]:Destroy()
    end
end

-- Tworzenie w≈Çasnego GUI
local gui = Instance.new("ScreenGui")
gui.Name = "DeltaLoadingUI"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
gui.Parent = playerGui

-- dalsza czƒô≈õƒá twojego GUI...


-- T≈Ço
local background = Instance.new("Frame")
background.Size = UDim2.new(1, 0, 1, 0)
background.BackgroundColor3 = Color3.fromRGB(15, 15, 25)
background.BorderSizePixel = 0
background.Parent = gui

-- Gradient t≈Ça
local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(40, 0, 80)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(10, 0, 20))
}
gradient.Rotation = 45
gradient.Parent = background

-- Mg≈Ça / przezroczysty overlay
local overlay = Instance.new("Frame")
overlay.Size = UDim2.new(1, 0, 1, 0)
overlay.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
overlay.BackgroundTransparency = 0.9
overlay.ZIndex = 2
overlay.Parent = background

-- Tytu≈Ç
local title = Instance.new("TextLabel")
title.Size = UDim2.new(0, 600, 0, 60)
title.Position = UDim2.new(0.5, -300, 0.33, 0)
title.BackgroundTransparency = 1
title.Text = "üåø Loading Grow a Garden..."
title.Font = Enum.Font.GothamBlack
title.TextSize = 42
title.TextColor3 = Color3.fromRGB(240, 210, 255)
title.TextStrokeTransparency = 0.4
title.TextStrokeColor3 = Color3.fromRGB(120, 0, 180)
title.ZIndex = 3
title.Parent = background

-- Pasek t≈Ça
local barBG = Instance.new("Frame")
barBG.Size = UDim2.new(0.6, 0, 0.05, 0)
barBG.Position = UDim2.new(0.2, 0, 0.5, 0)
barBG.BackgroundColor3 = Color3.fromRGB(40, 0, 70)
barBG.BorderSizePixel = 0
barBG.ZIndex = 3
barBG.ClipsDescendants = true
barBG.Parent = background

local barCorner = Instance.new("UICorner")
barCorner.CornerRadius = UDim.new(0, 10)
barCorner.Parent = barBG

-- Pasek ≈Çadowania
local loadingBar = Instance.new("Frame")
loadingBar.Size = UDim2.new(0, 0, 1, 0)
loadingBar.BackgroundColor3 = Color3.fromRGB(180, 120, 255)
loadingBar.BorderSizePixel = 0
loadingBar.ZIndex = 4
loadingBar.Parent = barBG

local barGradient = Instance.new("UIGradient")
barGradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(200, 140, 255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(130, 70, 255))
}
barGradient.Rotation = 0
barGradient.Parent = loadingBar

local loadingCorner = Instance.new("UICorner")
loadingCorner.CornerRadius = UDim.new(0, 10)
loadingCorner.Parent = loadingBar

-- Shine efekt
local shine = Instance.new("ImageLabel")
shine.Size = UDim2.new(0.2, 0, 1.2, 0)
shine.Position = UDim2.new(-0.25, 0, -0.1, 0)
shine.Image = "rbxassetid://11747210484" -- soft shine
shine.ImageTransparency = 0.4
shine.BackgroundTransparency = 1
shine.Rotation = 25
shine.ZIndex = 5
shine.Parent = loadingBar

-- Shine animacja
task.spawn(function()
	while gui and gui.Parent do
		shine.Position = UDim2.new(-0.3, 0, -0.1, 0)
		shine:TweenPosition(UDim2.new(1, 0, -0.1, 0), "Out", "Sine", 1.5, true)
		task.wait(2)
	end
end)

-- Pasek ≈Çadowania przez dok≈Çadnie 30 sekund
task.spawn(function()
	local totalTime = 30 -- czas w sekundach
	local steps = 100 -- liczba krok√≥w ≈Çadowania
	local stepTime = totalTime / steps

	for i = 1, steps do
		local percent = i / steps
		loadingBar:TweenSize(UDim2.new(percent, 0, 1, 0), "Out", "Sine", stepTime * 0.8, true)
		task.wait(stepTime)
	end

	if gui then gui:Destroy() end
end)

