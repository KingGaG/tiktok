-- Grow a Garden ‚Äì Visual Fruit Copier UI [Client-side only]
-- Autor: ChatGPT x KingGaG (c) 2025

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer

-- UI
local gui = Instance.new("ScreenGui")
gui.Name = "FruitCopyUI"
gui.ResetOnSpawn = false
gui.Parent = game:GetService("CoreGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 100)
frame.Position = UDim2.new(0.5, -100, 1, -120)
frame.AnchorPoint = Vector2.new(0.5, 1)
frame.BackgroundTransparency = 0.3
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.Parent = gui

local button = Instance.new("TextButton")
button.Size = UDim2.new(1, -20, 0, 40)
button.Position = UDim2.new(0, 10, 0, 30)
button.Text = "Copy Fruit üçâ"
button.Font = Enum.Font.GothamBold
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.BackgroundColor3 = Color3.fromRGB(85, 170, 85)
button.Parent = frame

-- Lokalny ekwipunek (folder w ReplicatedStorage)
local localInventory = ReplicatedStorage:FindFirstChild("LocalInventory")
if not localInventory then
	localInventory = Instance.new("Folder")
	localInventory.Name = "LocalInventory"
	localInventory.Parent = ReplicatedStorage
end

-- Logika kopiowania owocu
local function cloneFruit()
	local character = player.Character
	if not character then return end
	
	local tool = character:FindFirstChildOfClass("Tool")
	if not tool then
		warn("Nie trzymasz owocu w rƒôce.")
		return
	end

	-- Skopiuj Toola
	local clone = tool:Clone()
	clone.Name = tool.Name

	-- Dodaj do lokalnego ekwipunku
	clone.Parent = localInventory

	-- Info
	print("‚úÖ Skopiowano owoc:", clone.Name)
end

-- Obs≈Çuga przycisku
button.MouseButton1Click:Connect(cloneFruit)
